<form class="search-bar" {{action 'search' on='submit'}}>

  {{input class="main-other-locales" type="text" placeholder="Search other Locations Here..." value=locale}}
  <button name="search-button"><i class="fa fa-arrow-circle-right"></i>
  </button>

</form>

<header class = "current-location">
  <h2>Current Local Weather</h2>
</header>
<section class='main-container'>
<div class="current-weather">
  <div class="temperature-widget">
      <div class="temp-icon">
        <i class="wi {{todayConditionClass}} condition-icon"></i>
         <h1 class='temperature'>{{current.temperature}}<span>&deg;</span></h1>
      </div>
    <h3 class="summary">{{current.summary}}</h3>
    <h3 class="current-time">{{current.time}}</h3>
    <h3 class='current-precip-probablitly'>{{current.precipProbability}}%</h3>
    <h3 class='precip-type'>{{precipType}}</h3>
  </div>
</div>
</section>

